<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jonathan.comuni.Detalle_evento"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/imagen_evento"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cicletada"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/titulo_evento_detallada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cicletada"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/descripcion_evento_detallada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="se hara una cicletada en beneficio de tal persona"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/direccion_evento_detallada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="direccion tanto tanto"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/hora_inicio_evento_detallado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora de inicio tanto"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/hora_termino_evento_detallado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora de termino tanto"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:id="@+id/comentarios_evento_detallado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soy un comentario"
                android:layout_marginBottom="5dp"
                />
            <EditText
                android:id="@+id/dejar_comentarios_evento_detallado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dejar comentario"
                />

            <Button
                android:id="@+id/comentar_evento_detallado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comentar"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
